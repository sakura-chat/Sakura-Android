<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:orientation="vertical"
	tools:context=".ui.fragment.login.InitialSyncFragment">

	<com.google.android.material.loadingindicator.LoadingIndicator
		style="@style/Widget.Material3.LoadingIndicator.Contained"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />

	<!-- TODO: Update blank fragment layout -->
	<TextView
		style="?textAppearanceTitleLarge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="16dp"
		android:layout_marginVertical="12dp"
		android:text="@string/initial_sync"
		android:textAlignment="center" />

	<TextView
		style="?textAppearanceBodyMedium"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="16dp"
		android:text="@string/initial_sync_body"
		android:textAlignment="center" />

</LinearLayout>